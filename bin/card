#! /usr/bin/env ruby

require 'thor'
require 'cardlet'

module Cardlet
  class Create < Thor
    option :name, required: true
    desc 'deck', 'Create a new deck'
    def deck
      puts "Creating a deck called #{options[:name]}"
    end
  end

  class Delete < Thor
    option :name, required: true
    desc 'deck', 'Delete a deck'
    def deck
      puts "Deleting a deck called #{options[:name]}"
    end
  end

  class TopLevel < Thor
    desc 'create [deck | card]', 'Create something'
    subcommand 'create', Create

    desc 'delete [deck | card]', 'Delete something'
    subcommand 'delete', Delete
  end
end

Cardlet::TopLevel.start(ARGV)
